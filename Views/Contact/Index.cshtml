@model MailingSystem01.Models.ContactFormModel
<div class="container">
    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center">
            <form method="post" asp-action="SendMail" asp-controller="Contact" class="form-control">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="text" asp-for="Email" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Subject</label>
                    <input type="text" asp-for="Subject" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Message</label>
                    <textarea asp-for="Message" class="form-control"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Contact Now</button>
                </div>
            </form>

        </div>
    </div>
</div>